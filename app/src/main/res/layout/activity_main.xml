<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/weather_back_view"
    android:clipToPadding="true"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="144dp"
            android:layout_height="134dp"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/cloudyicon" />

        <EditText
            android:id="@+id/inputcity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:autoText="false"
            android:editable="false"
            android:ems="10"
            android:freezesText="false"
            android:gravity="center"
            android:hint="CITY NAME"
            android:layout_marginTop="10dp"
            android:inputType="textPersonName"
            android:textColor="#FFFFFF"
            android:textColorHint="#8F8E8E"
            android:textIsSelectable="true"
            android:textSize="20sp"
            android:textStyle="normal" />

        <Button
            android:id="@+id/button"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="#F69505"
            android:layout_gravity="center"
            android:drawableStart="@drawable/roun_button"
            android:includeFontPadding="true"
            android:onClick="getWeather"
            android:text="What's the weather"
            android:textColor="#000000"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/inputcity"
            android:drawableLeft="@drawable/roun_button" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="right"
                android:layout_marginBottom="20dp"
                android:layout_weight="1"
                >
                <TextView
                    android:id="@+id/temp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="#FF0202"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/temp1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#454444"
                    android:layout_gravity="center"
                    android:textSize="40dp">

                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="left"
                android:layout_weight="1"
                >

                <TextView
                    android:id="@+id/text5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="#FF0202"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/feel1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="#454444"
                    android:textSize="40dp"></TextView>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/main1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#454444"
                android:textSize="40dp"></TextView>

            <TextView
                android:id="@+id/description1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#454444"
                android:textSize="40dp"></TextView>
        </LinearLayout>

        <TextView
            android:id="@+id/humidity1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#454444"
            android:textSize="40dp"></TextView>


        <TextView
            android:id="@+id/pressure1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#454444"
            android:textSize="40dp"></TextView>


        <TextView
            android:id="@+id/sunrise1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#454444"
            android:textSize="40dp"></TextView>


        <TextView
            android:id="@+id/sunset1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#454444"
            android:textSize="40dp"></TextView>

    </LinearLayout>
</LinearLayout>